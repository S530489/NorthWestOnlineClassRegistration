<% include userHeader %>

    <ul>
        <li><a href="/userHome" class="active">Profile</a></li>
        <li><a href="/userSearch">Search</a></li>
        <li><a href="/userRegisterDrop">Register/Drop</a></li>
        <li style="float:right"><a href="/">Logout</a></li>
    </ul>
    
    <br>
    <br>
    <script type="text/javascript">
        $(window).on('load',function(){
            document.getElementById("profileImage").src = document.getElementById("imageid").innerHTML
        });
    </script>
    <% if(User != null) {%>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <span style="font-size: 20px"><b>Student Name :</b> <%=User.First_Name +" " +User.Last_Name %></span>
            <br><br><br>
            <span style="font-size: 20px"><b>Student Id  &emsp; &nbsp; : </b> <%=User.SID %> </span>
        </div>
        <p id="imageid" hidden><%= User.pic %></p>
        <div class="col-md-4">
                <img  style="border:5px green" src="" alt="Image not available for the user" width="200" height="200"  id="profileImage" > 
        </div>

    </div>
    <br>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <!-- <span style="font-size: 20px"><b>Student Id  &emsp; &nbsp; : </b> <%=User.SID %> </span> -->
        </div>
    </div>
    <% } %>
   

    <div class="row">
        <div class="col-md-2"></div>
        <span style="font-size: 20px"><b> &nbsp;&nbsp;Courses Registered </b></span>
    </div>
    <br>
    <div class="col-md-2"></div>
    
    <table id="courses">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Course Name</th>
                <th>Course Id</th>
                <th>Timings</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Location</th>
            </tr>
        </thead>
        <% for(var i=0; i<Courses_Registered.length; i++) {%>
        <tr>
            <td> <%= i+1 %></td>
            <td> <%= Courses_Registered[i].Course_Name%></td>
            <td> <%= Courses_Registered[i].CourseID%></td>
            <td> <%= Courses_Registered[i].Timings%></td>
            <td> <%= Courses_Registered[i].Start_Date%></td>
            <td> <%= Courses_Registered[i].End_Date%></td>
            <td> <%= Courses_Registered[i].Location%></td>
        </tr>
        <% } %>
    </table>

</body>

</html>